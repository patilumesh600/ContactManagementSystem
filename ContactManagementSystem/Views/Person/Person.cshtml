@model ContactManagementSystem.Context.Person_Contact
@{
    ViewBag.Title = "Person";
}
<style>
    .error {
        color: red;
    }
</style>
<script type="text/javascript">
    function resetAll() {
        $(':input').val('');
    };
</script>
@*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@


@using (Html.BeginForm("AddPersonContact", "Person", FormMethod.Post))
{
    <h4> Add Contact</h4>

    <div id="ShowErrorMsg" class="col-md-12;" style="padding:0px;">
        <div class="col-md-4" style="color:red;padding:0px;padding-bottom: 1%">@ViewBag.ErrorMessage</div>
    </div>
    <div class="clearfix"></div>

    <div class="col-md-4 container" style="border: 1px solid #d3d3d3;padding-top:1%;">
        <div class="form-group">
            @*@Html.HiddenFor(m => m.ID)*@
            <label>First Name</label>
            @Html.TextBoxFor(x => x.FirstName, new { placeholder = "First Name", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "error" })
        </div>
        <div class="form-group">
            <label>Middle Name</label>
            @Html.TextBoxFor(x => x.MiddleName, new { placeholder = "Middle Name", @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Last Name</label>
            @Html.TextBoxFor(x => x.LastName, new { placeholder = "Last Name", @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            @Html.TextBoxFor(x => x.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "error" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Contact</button>
            <button id="clearText" type="button" class="btn btn-danger" onclick="resetAll();">Clear</button>
        </div>

    </div>
}

